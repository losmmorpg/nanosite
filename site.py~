# Settings
Attribs = {"$TITLE$": "Paradoxical",
           "$AUTHOR$": "Andrew Wang"}
PostsDirectory = "posts"

import markdown
import os

def insert_attribs(p):
    for attrib in Attribs:
        p = p.replace(attrib, Attribs[attrib])
    return p

def insert_posts(p):
    content = ""
    for filename in os.listdir(PostsDirectory):
        md = open(filename, "r").read()
        html = markdown.markdown(md)
        content += html
    return p.replace("$CONTENT$", content)

page = open("template.html", "r").read()
page = insert_attribs(page)
page = insert_posts(page)
print(page)